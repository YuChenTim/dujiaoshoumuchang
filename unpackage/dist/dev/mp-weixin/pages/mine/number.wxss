.headBox {
  background-color: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 94%;
  margin: 50rpx auto;
  border-radius: 12rpx;
}
.headBox .headLeft {
    margin: 48rpx 0 24rpx 24rpx;
    width: 55%;
}
.headBox .headLeft .headLeftExplain {
      margin-top: 60rpx;
      color: #007AFF;
      font-size: 22rpx;
}
.headBox .headRight {
    margin: 48rpx 24rpx 0 36rpx;
    width: 35%;
}
.headBox .headRight .headRightNumber {
      color: #4E54C8;
}
.headBox .headRight .headButton {
      width: 160rpx;
      height: 60rpx;
      color: #FFFFFF;
      background-color: #4E54C8;
      font-size: 26rpx;
      float: right;
      margin-top: 30rpx;
}
.headBox .headTitle {
    font-size: 22rpx;
    color: #333333;
}
.headBox .headNumber {
    font-size: 64rpx;
    color: #333333;
    margin: 28rpx 0 14rpx;
}
.headBox .headContain {
    font-size: 22rpx;
    color: #DFDFDF;
}
.headBox .headContain text {
      color: #4E54C8;
}
.numberCentent .numberCententTitle {
  margin: 0 3%;
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  letter-spacing: 7rpx;
}
