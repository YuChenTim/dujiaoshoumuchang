.box {
  width: 94%;
  margin: 30rpx auto 66rpx;
  background-color: #FFFFFF;
}
.box .boxTop {
    padding: 30rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.box .boxTop .boxTopLeft {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
}
.box .boxTop .boxTopLeft .boxTopLeftL {
        background-color: #4E54C8;
        margin-right: 16rpx;
        width: 16rpx;
        height: 40rpx;
        border-radius: 8rpx;
}
.box .boxTop .boxTopLeft .boxTitle {
        font-size: 28rpx;
        color: #333333;
}
.box .boxTop .boxRight {
      font-size: 26rpx;
      color: #4E54C8;
}
.box .boxTime {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    font-size: 36rpx;
    color: #333333;
    text-align: center;
    margin-top: 30rpx;
}
.box .boxTime .boxLine {
      margin: 0 28rpx;
}
.box .boxTime .boxDay {
      font-size: 22rpx;
      color: #999999;
      margin-top: 24rpx;
}
.box .place {
    margin: 48rpx 0 48rpx 30rpx;
    font-size: 22rpx;
    color: #333333;
}
.box .place image {
      width: 36rpx;
      height: 36rpx;
      vertical-align: middle;
}
.box .number {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: space-around;
            justify-content: space-around;
    text-align: center;
}
.box .number .numberTitle {
      font-size: 22rpx;
      color: #999999;
      margin-bottom: 20rpx;
}
.box .number .numberCentent {
      font-size: 28rpx;
      color: #333333;
}
.box .startButton {
    background-color: #4E54C8;
    font-size: 32rpx;
    color: #FFFFFF;
    width: 360rpx;
    height: 76rpx;
    border-radius: 38rpx;
    margin: 0 auto;
    position: relative;
    left: 0;
    top: 36rpx;
}
.out .startButton {
  background-color: #F0F0F0;
}

