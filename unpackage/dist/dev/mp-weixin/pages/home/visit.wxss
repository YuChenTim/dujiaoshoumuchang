page {
  background-color: #FCFCFC;
}
.bigBox {
  background-color: #FFFFFF;
}
.bigBox .box {
    margin-left: 30rpx;
    border-bottom: 1rpx solid rgba(200, 199, 204, 0.6);
    line-height: 100rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.bigBox .box .boxLeft {
      font-size: 28rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      width: 100%;
}
.bigBox .box .boxLeft .boxText {
        width: 300rpx;
        color: #333333;
}
.bigBox .box .boxInput {
      height: 100rpx;
      width: 100%;
      position: relative;
}
.bigBox .box .boxInput .boxReturn {
        margin-top: -30rpx;
        margin-right: 34rpx;
        width: 16rpx;
        height: 26rpx;
        float: right;
}
.bigBox .box .editor {
      width: 100%;
}
.bigBox .box .ic-Return {
      margin-right: 34rpx;
      line-height: 100rpx;
}
.bigBox .box .ic-Return image {
        width: 16rpx;
        height: 26rpx;
}
.bigBox .box .timeRight {
      position: absolute;
      right: 0;
      top: 0;
}
.bigBox .boxLast {
    border-bottom: none;
    display: block;
}
.buttonView {
  height: 90rpx;
  width: 100%;
}
