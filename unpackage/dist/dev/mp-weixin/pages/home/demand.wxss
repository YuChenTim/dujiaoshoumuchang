page {
  background-color: #FCFCFC;
}
.box {
  background-color: #FFFFFF;
  padding-left: 30rpx;
  border-bottom: 1rpx solid rgba(200, 199, 204, 0.6);
  line-height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.box .boxLeft {
    font-size: 28rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    width: 100%;
}
.box .boxLeft .boxText {
      width: 300rpx;
      color: #333333;
}
.box .boxInput {
    height: 100rpx;
    width: 100%;
    position: relative;
}
.box .boxInput .boxReturn {
      margin-top: -30rpx;
      margin-right: 34rpx;
      width: 16rpx;
      height: 26rpx;
      float: right;
}
.box .editor {
    width: 100%;
}
.box .ic-Return {
    margin-right: 34rpx;
    line-height: 100rpx;
}
.box .ic-Return image {
      width: 16rpx;
      height: 26rpx;
}
.box .timeRight {
    position: absolute;
    right: 0;
    top: 0;
}
.boxLast {
  border-bottom: none;
  display: block;
}
.button {
  width: 690rpx;
  background-color: #4E54C8;
  margin: 50rpx auto;
  color: #FFFFFF;
  margin-bottom: 30rpx;
}

