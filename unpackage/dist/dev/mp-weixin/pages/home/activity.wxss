page {
  background-color: #FCFCFC;
}
.titleImg {
  width: 94%;
  margin: 20rpx auto;
  border-radius: 20rpx;
  height: 346rpx;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}
.head {
  background-color: #FFFFFF;
}
.head .headContent {
    width: 94%;
    margin: 0 auto;
}
.head .headContent .headTitle {
      font-size: 42rpx;
      color: #333333;
      line-height: 48rpx;
      padding-top: 24rpx;
      margin-bottom: 36rpx;
}
.head .headContent .joinPeople image {
      height: 36rpx;
      width: 36rpx;
      vertical-align: middle;
}
.head .headContent .joinPeople text {
      color: #999999;
      font-size: 22rpx;
      margin: 0 48rpx 0 10rpx;
}
.head .headContent .money {
      font-size: 64rpx;
      color: #F7554D;
      margin: 46rpx 0 10rpx;
}
.head .headContent .money text {
        font-size: 32rpx;
}
.head .headContent .explain {
      color: #999999;
      font-size: 22rpx;
}
.head .headContent .timePlaceholder {
      color: #333333;
      font-size: 26rpx;
      margin: 36rpx 0 10rpx;
}
.head .headContent .timePlaceholder .timePlaceholderContent {
        margin-bottom: 26rpx;
}
.head .headContent .timePlaceholder .timePlaceholderContent image {
          height: 36rpx;
          width: 36rpx;
          vertical-align: middle;
          margin-right: 22rpx;
}
.head .headContent .sponsor {
      border-top: 1rpx solid #DFDFDF;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
}
.head .headContent .sponsor .sponsorLogo {
        margin: 30rpx 28rpx 0 0;
        width: 146rpx;
}
.head .headContent .sponsor .sponsorLogo .sponsorImg {
          width: 100%;
          height: 52rpx;
}
.head .headContent .sponsor .sponsorLogo .logoImg {
          margin-top: -15rpx;
          width: 100%;
          height: 120rpx;
}
.head .headContent .sponsor .sponsorText .sponsorTitle {
        font-size: 36rpx;
        color: #333333;
        margin: 30rpx 0 24rpx;
}
.head .headContent .sponsor .sponsorText .sponsorContent {
        font-size: 22rpx;
        color: #999999;
}
.activityTitle {
  text-align: center;
  color: #4E54C8;
  margin: 30rpx 0;
}
.activityContent {
  width: 94%;
  margin: 20rpx auto;
}
.activityContent image {
    border-radius: 20rpx;
    width: 100%;
}
.activityButton {
  text-align: center;
  margin: 62rpx 0 88rpx;
}
.activityButton button {
    width: 230rpx;
    height: 94rpx;
    color: #FFFFFF;
    background-color: #4E54C8;
    box-shadow: 0rpx 0rpx 4rpx 4rpx rgba(79, 82, 139, 0.36);
    border-radius: 47rpx;
    display: inline-block;
    margin: 0 19rpx;
}
.activityButton .outmoded {
    background-color: #DFDFDF;
    box-shadow: 0rpx 0rpx 4rpx 4rpx rgba(79, 82, 139, 0);
}

