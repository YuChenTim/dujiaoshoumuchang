page {
  background-color: #FCFCFC;
}
.applyImg {
  width: 100%;
  height: 250rpx;
  background-repeat: no-repeat;
  background-size: 100%;
  text-align: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.applyImg .applyText {
    color: #FFFFFF;
    font-size: 38rpx;
}
.bigBox {
  background-color: #FFFFFF;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
}
.bigBox .boxTitle {
    text-align: center;
    border-bottom: 1rpx solid #DFDFDF;
    font-size: 42rpx;
    padding: 18rpx 0 12rpx;
}
.bigBox .box {
    border-bottom: 1rpx solid rgba(200, 199, 204, 0.6);
    line-height: 100rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    padding-left: 12rpx;
}
.bigBox .box .boxLeft {
      font-size: 28rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      width: 100%;
}
.bigBox .box .boxLeft .boxText {
        width: 300rpx;
        color: #333333;
}
.bigBox .box .boxInput {
      height: 100rpx;
      width: 100%;
      position: relative;
}
.bigBox .box .boxInput .boxReturn {
        margin-top: -30rpx;
        margin-right: 34rpx;
        width: 16rpx;
        height: 26rpx;
        float: right;
}
.bigBox .box .editor {
      width: 100%;
}
.bigBox .box .ic-Return {
      margin-right: 34rpx;
      line-height: 100rpx;
}
.bigBox .box .ic-Return image {
        width: 16rpx;
        height: 26rpx;
}
.bigBox .box .timeRight {
      position: absolute;
      right: 0;
      top: 0;
}
.bigBox .boxLast {
    border-bottom: none;
    display: block;
}
.introduce {
  margin: 0 30rpx;
  padding-top: 38rpx;
  background-color: #FFFFFF;
  padding: 18rpx 20rpx;
  line-height: 55rpx;
  border-radius: 12rpx;
  color: #666666;
  font-size: 30rpx;
}
.introduce .introduceTitle {
    font-size: 36rpx;
}
.button {
  margin: 30rpx auto 50rpx;
  width: 690rpx;
  background-color: #4E54C8;
  color: #FFFFFF;
}

