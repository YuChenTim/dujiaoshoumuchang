page {
  background-color: #FCFCFC;
}
.information {
  height: 356rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.information .informationleft {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    margin-top: 50rpx;
}
.information .informationleft .informationImg {
      margin: 30rpx;
      width: 140rpx;
      height: 140rpx;
}
.information .informationleft .informationImg image {
        border: 6rpx solid rgba(255, 255, 255, 0.5);
        border-radius: 50%;
        width: 100%;
        height: 100%;
}
.information .informationleft .name {
      font-size: 42rpx;
      color: #FFFFFF;
      margin-top: 36rpx;
}
.information .informationleft .name .companyName {
        font-size: 28rpx;
        color: #FEFEFE;
        margin-top: 24rpx;
}
.information .ic-Return {
    height: 315rpx;
    margin-right: 64rpx;
    line-height: 356rpx;
}
.information .ic-Return image {
      width: 16rpx;
      height: 26rpx;
}
.box {
  height: 120rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 120rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  background-color: #FFFFFF;
  border-radius: 12rpx;
}
.box .boxImg {
    width: 44rpx;
    height: 44rpx;
    margin: 0 30rpx;
    vertical-align: middle;
}
.box .boxReturn {
    margin-right: 34rpx;
    width: 16rpx;
    height: 26rpx;
}
.bigBox {
  width: 690rpx;
  margin: 32rpx auto;
  box-shadow: 0rpx 0rpx 4rpx 4rpx rgba(79, 82, 139, 0.1);
  border-radius: 12rpx;
}

