page {
  background-color: #FCFCFC;
}
.roomItem {
  height: 100%;
  background-size: 100%;
  background-repeat: no-repeat;
  background-position: center;
}
.box {
  background: #FFFFFF;
  height: 100rpx;
  margin-bottom: 4rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 24rpx;
  color: #333333;
}
.box .boxTitle {
    margin-left: 30rpx;
    line-height: 100rpx;
}
.box .boxRight {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    margin-right: 30rpx;
}
.box .boxRight .boxPicker {
      height: 100rpx;
      line-height: 100rpx;
      margin-right: 15rpx;
}
.box .boxRight .ic-Return {
      line-height: 100rpx;
}
.box .boxRight .ic-Return image {
        width: 16rpx;
        height: 26rpx;
}
.chengeBox {
  background: #FFFFFF;
  margin-bottom: 4rpx;
  padding: 30rpx;
}
.chengeBox .chengeTitle {
    margin-bottom: 17rpx;
    font-size: 24rpx;
    color: #333333;
}
.chengeBox .chengeTimeScroll {
    height: 160rpx;
}
.chengeBox .chengeTimeScroll .chengeTime {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      margin: 30rpx 0 0 50rpx;
      border-bottom: none;
      width: 2880rpx;
}
.chengeBox .chengeTimeScroll .chengeTime .chengeTimeBox {
        height: 80rpx;
        width: 120rpx;
        background-color: #DFDFDF;
}
.chengeBox .chengeTimeScroll .chengeTime .color {
        background-color: #191970;
}
.chengeBox .chengeTimeScroll .chengeTime #booked {
        background-color: #4E54C8;
}
.chengeBox .chengeTimeScroll .thisTime {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      border-top: 1rpx solid #000000;
      padding-top: 10rpx;
      width: 3000rpx;
}
.chengeBox .chengeTimeScroll .thisTime .thisTimeBox {
        width: 100rpx;
        margin-right: 20rpx;
        font-size: 24rpx;
        color: #333333;
        text-align: center;
}
.theme {
  background: #FFFFFF;
  height: 100rpx;
  margin-bottom: 4rpx;
  padding: 30rpx;
}
.theme .themeTitle {
    margin-bottom: 17rpx;
    font-size: 24rpx;
    color: #333333;
}
.theme .themePlaceholder {
    font-size: 24rpx;
}
.people {
  background: #FFFFFF;
  height: 100rpx;
  margin-bottom: 4rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 24rpx;
  color: #333333;
}
.people .peopleTitle {
    margin-left: 30rpx;
    line-height: 100rpx;
}
.people .peopleRight .peoplePicker {
    height: 100rpx;
    line-height: 100rpx;
    margin-left: 15rpx;
}
.button {
  width: 700rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #4E54C8;
  font-size: 36rpx;
  color: #FFFFFF;
  margin-top: 15rpx;
}

